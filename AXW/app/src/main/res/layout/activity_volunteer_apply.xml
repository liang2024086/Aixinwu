<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aixinwu.axw.activity.VolunteerApply">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="活动信息"
        android:textColor="#3e3a39"
        android:background="#eeeeef"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text=""
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/aixinwu"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_below="@id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/volAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"/>

        <View
            android:layout_below="@id/volAbout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/volContent"
            android:layout_below="@id/volAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/texts"
        android:layout_below="@id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/love_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ea5404"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/duration"
            android:layout_below="@id/love_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/time"
            android:layout_below="@id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/site"
            android:layout_below="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/numOfPeople"
            android:layout_below="@id/site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/whetherJoined"
            android:layout_below="@id/numOfPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未参加"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_below="@id/texts"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeef"/>

    <RelativeLayout
        android:id="@+id/signup"
        android:layout_below="@id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contactApproach"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:text="联系方式："/>

            <EditText
                android:id="@+id/phoneNumber"
                android:inputType="phone"
                android:layout_toEndOf="@id/contactApproach"
                android:layout_toRightOf="@id/contactApproach"
                android:layout_alignParentTop="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_background"
                android:textSize="14sp"/>

        </RelativeLayout>



        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="报名"/>


    </RelativeLayout>
</RelativeLayout>
</ScrollView>